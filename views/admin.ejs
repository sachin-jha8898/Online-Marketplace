<body>
    <div class="container">

        <!-- Form -->
        <div class="form">
            <h2>Add Asset</h2>

            <div class="topic">
                <input type="text" name="name" class="productName" placeholder="Product Name" required>
                <i class="fa fa-vcard-o" aria-hidden="true"></i>
            </div>
            <div class="topic">
                <input type="text" name="name" class="productImage" placeholder="Image URL" required>
                <i class="fa fa-vcard-o" aria-hidden="true"></i>
            </div>
            <div class="topic">
                <input type="text" name="price" class="productPrice" placeholder="Price" required>
                <i class="fa fa-rupee" aria-hidden="true"></i>
            </div>
            <div class="number">
                <input type="text" name="quantity" class="productQuantity" placeholder="Quantity" autocomplete="off">
                <i class="fa fa-object-group" aria-hidden="true"></i>
            </div>
            <div class="btn">
                <button type="submit" class="addProduct_button">Add ▶</button>
            </div>

        </div>
    </div>

    <section class="products">
        <div class="buttons">
            <!-- <div class="btn1">
                <button id="add">Add Product</button>
            </div> -->
            <div class="btn2">
                <a href="/logout"><button>Logout</button></a>
            </div>
        </div>
    </section>
</body>

<script>
    const product_name = document.querySelector(".productName");
    const product_image = document.querySelector(".productImage");
    const product_price = document.querySelector(".productPrice");
    const product_quantity = document.querySelector(".productQuantity");

    const addButton = document.querySelector(".addProduct_button");

    addButton.addEventListener("click", () => {
        let options = {
            method: "POST",
            body: JSON.stringify({
                name: product_name.value,
                imgurl : product_image.value,
                base_price: product_price.value,
                base_quantity: product_quantity.value
            }),
            headers: new Headers({
                'Content-Type': 'application/json'
            })
        }

        fetch('/adminData', options)
            .then((response) => response.json())
            .then((result) => {
                alert(result.message);

                product_name.value = "";
                product_price.value = "";
                product_quantity.value = "";
            })
            .catch(err => console.error("Error: ", err));

    });
</script>

